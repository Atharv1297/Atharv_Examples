pipeline {
    agent any
    stages {
        
        stage('addition') {
            steps {
                sh 'bash ./addition.sh ${firstnumber} ${secondnumber}'
            }  
        }
        stage('substraction') {
            steps {
                sh 'bash ./substraction.sh ${firstnumber} ${secondnumber}'
            }  
        }
        stage('division') {
            steps {
                sh 'bash ./division.sh ${firstnumber} ${secondnumber}'
            }  
        }
    }
 }
